extends layout

include mixins/form

block content
  section.vh-100.gradient-custom(style='padding:50px;')
    .container.h-100
      .row.d-flex.justify-content-center.align-items-center
        .col-12.col-md-8.col-lg-6.col-xl-5

          //Tabs
          ul.nav.nav-pills.mb-3.flex-column.flex-sm-row(id='login-tab' role='tablist')
            li.nav-item.flex-sm-fill.text-sm-center.d-flex.justify-content-evenly(role='presentation')
              button#pills-sign-in-tab.nav-link.active.flex-sm-fill.text-sm-center(
                data-bs-toggle="pill"
                data-bs-target="#pills-sign-in"
                type="button"
                role="tab"
                aria-controls="pills-sign-in"
                aria-selected="true") Iniciar sesión
            li.nav-item.flex-sm-fill.text-sm-center.d-flex.justify-content-evenly(role='presentation')
              button#pills-sign-up-tab.nav-link.flex-sm-fill.text-sm-center(
                data-bs-toggle="pill"
                data-bs-target="#pills-sign-up"
                type="button"
                role="tab"
                aria-controls="pills-sign-up"
                aria-selected="true") Registrarse

          //login
          #pills-tabContent.tab-content
            // Sign-in
            #pills-sign-in.tab-pane.fade.show.active(role='tabpanel' aria-labelledby="pills-sign-in")
              +form()
                h3.mb-5 Inicia sesión!
                .form-outline.mb-4
                  input#sign-in-email.form-control.form-control-lg(type='email' name='email')
                  label.form-label(for='sign-in-email') Correo electrónico
                .form-outline.mb-4
                  input#sign-in-password.form-control.form-control-lg(type='password' name='password')
                  label.form-label(for='typePasswordX-2') Contraseña
                .d-grid.gap-2
                  button.btn.btn-primary.btn-lg(type='submit') Ir a mi cuenta
            // Sign-up
            #pills-sign-up.tab-pane.fade(role='tabpanel' aria-labelledby="pills-sign-up")
              +form()
                h3.mb-5 Crea tu cuenta!
                .form-outline.mb-4
                  input#sign-up-username.form-control.form-control-lg(type='text' name='username')
                  label.form-label(for='sign-up-username') Nombre de usuario
                .form-outline.mb-4
                  input#sign-up-email.form-control.form-control-lg(type='email' name='email')
                  label.form-label(for='sign-up-email') Correo electrónico
                .form-outline.mb-4
                  input#sign-up-password.form-control.form-control-lg(type='password' name='password')
                  label.form-label(for='typePasswordX-2') Contraseña
                .d-grid.gap-2
                  button.btn.btn-primary.btn-lg(type='submit') Crear mi cuenta
